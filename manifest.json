{
  "name": "EasyRaceLapTimer RaceBox",
  "description": "Companion application for the EasyRaceLapTimer RaceBox from AirBirds.de",
  "version": "0.7",
  "manifest_version": 2,
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "permissions": [
    "serial",
    {"fileSystem": ["write", "retainEntries", "directory"]},
    "storage",
    "clipboardWrite",
    "contextMenus"
  ],
  "file_handlers": {
    "text": {
      "types": [
          "text/*"
      ]
    }
  },
  "icons": { "16": "icon-16.png", "128": "icon-196.png" }
}
